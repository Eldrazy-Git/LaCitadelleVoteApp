<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- ========= CONTENU (non-drawer) ========= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Ton écran principal -->
        <ScrollView
            android:id="@+id/scrollViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#283852">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo Citadelle -->
                <ImageView
                    android:id="@+id/logoCitadelle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_citadelle"
                    android:contentDescription="@string/logo_citadelle" />

                <!-- Logo Discord -->
                <ImageView
                    android:id="@+id/logoDiscord"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo_discord"
                    android:contentDescription="@string/logo_discord" />

                <!-- ==== BOUTONS DE VOTE (uniformisés) ==== -->

                <LinearLayout
                    android:id="@+id/btnVote1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:minHeight="0dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="Vote Serveur Privé"
                        app:srcCompat="@drawable/logo_serveur_prive_net"
                        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
                        app:strokeWidth="0dp" />

                    <TextView
                        android:id="@+id/timerVote1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Vote dans 00:00"
                        android:textColor="#aba36d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnVote2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:minHeight="0dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="Serveur Minecraft Vote"
                        app:srcCompat="@drawable/logo_serveur_minecraft_vote"
                        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
                        app:strokeWidth="0dp" />

                    <TextView
                        android:id="@+id/timerVote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Vote dans 00:00"
                        android:textColor="#aba36d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnVote3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:minHeight="0dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="Vote Serveur Minecraft"
                        app:srcCompat="@drawable/logo_serveur_minecraft_com"
                        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
                        app:strokeWidth="0dp" />

                    <TextView
                        android:id="@+id/timerVote3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Vote dans 00:00"
                        android:textColor="#aba36d"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnVote4"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:minHeight="0dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="Vote ServeursMinecraft.org"
                        app:srcCompat="@drawable/logo_serveursminecraft_org"
                        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
                        app:strokeWidth="0dp" />

                    <TextView
                        android:id="@+id/timerVote4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Vote dans 00:00"
                        android:textColor="#aba36d"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bouton drawer -->
        <FrameLayout
            android:id="@+id/handleContainer"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="-36dp"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/handleDrawer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/handle_rect"
                android:src="@drawable/ic_menu_burger"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:contentDescription="@string/open_menu"
                android:tint="#aba36d" />
        </FrameLayout>

    </FrameLayout>

    <!-- ========= DRAWER ========= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/rightDrawer"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:background="@color/cit_button"
        android:fitsSystemWindows="true"
        android:overScrollMode="never"
        app:itemIconTint="@color/cit_border"
        app:itemTextColor="@color/cit_border"
        app:menu="@menu/drawer_menu"
        app:itemVerticalPadding="0dp" />

</androidx.drawerlayout.widget.DrawerLayout>
